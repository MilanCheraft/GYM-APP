             x:Class="MdePe.Pages.MainPage"
             NavigationPage.HasNavigationBar ="False"
             BackgroundImageSource="https://cdn.wallpapersafari.com/23/0/Qpbwdo.jpg">
   

    <StackLayout Style="{StaticResource formAndHome}">        
